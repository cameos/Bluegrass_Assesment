
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/fontawesome/css/all.css" />
</head>
<body class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="login-container">
                <div class="login-title">register as new admin</div>
                <div class="login-body">
                    <form enctype="multipart/form-data" id="adminRegister" name="adminRegister">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="adminName">First Name</label>
                                <input type="text" class="form-control" id="adminName" name="adminName" style="border-radius:1px; margin-left:auto; margin-right:auto;" placeholder="First Name">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="lastName">Last Name</label>
                                <input type="text" class="form-control" id="adminLastName" name="adminLastName" style="border-radius:1px; margin-left:auto; margin-right:auto; " placeholder="Last Name">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="adminEmail">Email</label>
                                <input type="email" class="form-control" id="adminEmail" name="adminEmail" style="border-radius:1px; margin-left:auto; margin-right:auto; " placeholder="Enter email">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="adminReEmail">Re-Email</label>
                                <input type="email" class="form-control" id="adminReEmail" name="adminReEmail" style="border-radius:1px; margin-left:auto; margin-right:auto;" placeholder="Re enter email">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="adminPassword">Password</label>
                                <input type="password" class="form-control" id="adminPassword" name="adminPassword" style="border-radius:1px; margin-left:auto; margin-right:auto;" placeholder="enter password">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="adminRePasssword">Re-Password</label>
                                <input type="password" class="form-control" id="adminRePassword" style="border-radius:1px; margin-left:auto; margin-right:auto;" placeholder="re enter passworrd">
                            </div>
                        </div>
                        <input type="submit" value="register as admin" class="btn btn-primary" style="border-radius:1px; margin-left:auto; margin-right:auto; font-weight:bold;">
                    </form>

                    <div class="row" style="margin-top:2%;">
                        <div class="col-11">
                            <div id="registerError" class="hideError">
                                It's either the admin exists or please register or enter valid admin details
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Content/fontawesome/js/all.js"></script>
    <script src="~/Scripts/main/main.js"></script>
</body>

</html>
